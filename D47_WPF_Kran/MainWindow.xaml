<Window x:Class="D47_WPF_Kran.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:D47_WPF_Kran"
        Title="MainWindow" Height="600" Width="700" >

    <DockPanel >

        <local:KranDarstellung x:Name="Kran" DockPanel.Dock="Top"></local:KranDarstellung>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Right" Grid.Row="500" Orientation="Vertical">
            <Button Name="KranTop" Click="KranTop_Click"  Height="50" Width="100">/\</Button>
            <StackPanel HorizontalAlignment="Right" Grid.Row="500" Orientation="Horizontal">
                <Button Name="KranLinks" Click="KranLinks_Click" Height="50" Width="50">&lt;--</Button>
                <Button Name="KranRechts" Click="KranRechts_Click"  Height="50" Width="50">--&gt;</Button>
            </StackPanel>
            <Button Name="KranBottom" Click="KranBottom_Click"  Height="50" Width="100">\/</Button>
        </StackPanel>
    </DockPanel>

</Window>
